
<!DOCTYPE html>
<html>
<head>
<style>
body  {
    background-image: url("../fotos/costanera.jpg");
    background-size: 100% 100%;
}
</style>
</head>
<body>
<% if flash[:alert] %>
  <%= flash[:alert] %>
<% end %>

<div class="container" > 

     <div class="col-sm-4">
         <div class="grey">
             <h1>Editar Usuario</h1>
             <%= form_for @user, url: users_path, html: { multipart: true } do |form| %>
				  <%= form.file_field :avatar %>
			 <% end %>
             <%= form_for(@user) do |f| %>  
				  <div class="field">
				    <%= f.label 'Nombre de usuario' %><br> 
				    <%= f.text_field :name %>
				  </div>
				  <div class="field">
				    <%= f.label :primer_nombre %><br>
				    <%= f.text_field :first_name %>
				  </div>
				  <div class="field">
				    <%= f.label :apellido %><br>
				    <%= f.text_field :last_name %>
				  </div>
				  <div class="field">
				    <%= f.label :email %><br>
				    <%= f.email_field :email %> 
				  </div>
				  <div class="actions">
				    <%= f.submit "Modificar",class: 'btn btn-success' %>
				    <%= link_to 'regresar', root_url, class: 'btn btn-danger' %> 
				  </div>
				  <div class="actions">
				    
				  </div>
				<% end %>

         </div>
     </div>
     <div class="col-sm-8">

                    
     </div>
</div>

</body>
</html>