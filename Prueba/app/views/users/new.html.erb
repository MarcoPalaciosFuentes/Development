
<!DOCTYPE html>
<html>
<head>
<style>
body  {
    background-image: url("../fotos/costanera.jpg");
    background-size: 100% 100%;
}
</style>
</head>
<body>
<% if flash[:alert] %>
  <%= flash[:alert] %>
<% end %>

<div class="container" > 

     <div class="col-lg-4">
         <div class="grey">
             <h1>Nuevo Usuario</h1>
             <%= form_for(@user) do |f| %>  
				  <div class="field">
				    <%= f.label :admin %><br>
				    <%= f.check_box :admin %>
				  </div>
				  <div class="field">
				    <%= f.label 'Nombre de usuario' %><br> 
				    <%= f.text_field :name %>
				  </div>
				  <div class="field">
				    <%= f.label 'clave' %><br>
				    <%= f.password_field :password %>
				  </div>
				  <div class="field">
				    <%= f.label 'confirmaciÃ³n de clave'%><br>
				    <%= f.password_field :password_confirmation %>
				  </div>
				  <div class="field">
				    <%= f.label :primer_nombre %><br>
				    <%= f.text_field :first_name %>
				  </div>
				  <div class="field">
				    <%= f.label :apellido %><br>
				    <%= f.text_field :last_name %>
				  </div>
				  <div class="field">
				    <%= f.label :email %><br>
				    <%= f.email_field :email %> 
				  </div>
				  <div class="actions">
				    <%= f.submit "Registrarse" %>
				    <%= link_to 'regresar', root_url, class: 'btn btn-success' %> 
				  </div>
				  <div class="actions">
				    
				  </div>
				<% end %>

         </div>
     </div>
     <div class="col-sm-8">

                    
     </div>
</div>

</body>
</html>