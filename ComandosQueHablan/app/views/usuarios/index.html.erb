<p id="notice"><%= notice %></p>

<h1>Listado de Usuarios</h1>

<table width="80%">
  <thead>
    <tr>
      <th>Admin </th>
      <th>Nombre usuario</th>
      <th>Primer nombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.admin %></td>
        <td><%= usuario.nombre_usuario %></td>
        <td><%= usuario.primer_nombre %></td>
        <td><%= usuario.apellido %></td>
        <td><%= usuario.email %></td>
        <td><%= link_to 'Show', usuario, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_usuario_path(usuario), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', usuario, method: :delete, data: { confirm: '¿estás seguro?' }, class: 'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  

<%= link_to 'Nuevo Usuario', new_usuario_path, class: 'btn btn-success' %>
